                                                            <DataTemplate>
                                                                <Border
                                                                    x:Name="BorderPlace"
                                                                    Padding="8"
                                                                    BorderBrush="Black"
                                                                    BorderThickness="1">

                                                                    <StackPanel Margin="8,0,0,0">
