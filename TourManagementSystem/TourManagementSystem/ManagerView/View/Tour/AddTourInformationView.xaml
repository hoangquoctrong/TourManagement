<UserControl
    x:Class="TourManagementSystem.ManagerView.View.AddTourInformationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TourManagementSystem.ManagerView.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1190"
    Height="620"
    mc:Ignorable="d">
    <UserControl.Style>
        <Style>
            <Style.Triggers>
                <EventTrigger RoutedEvent="UserControl.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                From="0.0"
                                To="1.0"
                                Duration="0:0:1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>

    <UserControl.Resources>
        <Style x:Key="WrapText" TargetType="{x:Type TextBlock}">
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="BorderThickness" Value="0.5" />
            <Setter Property="BorderBrush" Value="#D6D6D6" />
            <Setter Property="Background" Value="#FFFFFF" />
        </Style>
        <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="{x:Type DataGridCell}">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="#d6d6d6" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FDF8EA" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <ContentControl x:Name="contentControlAdd" Height="auto">

        <Border
            BorderBrush="#0f6f68"
            BorderThickness="3"
            CornerRadius="15">
            <Grid>

                <Border
                    Panel.ZIndex="1000"
                    BorderThickness="0.5"
                    CornerRadius="25">
                    <Grid Visibility="{Binding ProgressBarVisbility}">

                        <Grid.Background>
                            <SolidColorBrush Opacity=".3" Color="Black" />
                        </Grid.Background>
                        <StackPanel
                            Margin="0,120,0,120"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <ProgressBar
                                Width="80"
                                Height="80"
                                Foreground="White"
                                IsIndeterminate="True"
                                Style="{StaticResource MaterialDesignCircularProgressBar}"
                                Value="35" />
                            <TextBlock
                                Margin="16,0"
                                VerticalAlignment="Center"
                                FontSize="24"
                                Foreground="White"
                                Text="Loading..." />
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Height="60"
                        Background="#0f6f68"
                        CornerRadius="15 15 0 0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            Foreground="White"
                            Text="A D D    N E W    T O U R    I N F O R M A T I O N" />
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <TabControl
                            x:Name="TabItemBtn"
                            Margin="0,0,10,0"
                            materialDesign:ColorZoneAssist.Mode="Standard"
                            materialDesign:ShadowAssist.ShadowDepth="Depth0"
                            Background="Transparent"
                            Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                            TabStripPlacement="Top">

                            <TabItem
                                Width="290"
                                Background="Transparent"
                                Style="{StaticResource MaterialDesignNavigationRailTabItem}"
                                TabIndex="0">

                                <TabItem.Header>
                                    <StackPanel
                                        Width="240"
                                        Height="50"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            Margin="20,0"
                                            VerticalAlignment="Center"
                                            Kind="ClockOutline" />
                                        <TextBlock
                                            Margin="20,0,20,8.6"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            FontSize="24"
                                            Foreground="Black"
                                            Text="Time" />
                                    </StackPanel>
                                </TabItem.Header>

                                <Grid Margin="50,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <StackPanel Margin="0,24,0,0" VerticalAlignment="Center">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontFamily="helvetica"
                                            FontSize="24"
                                            Foreground="Black"
                                            Text="Register Tour Time" />
                                    </StackPanel>

                                    <Grid Grid.Row="1">
                                        <DockPanel Margin="20,20,30,20" HorizontalAlignment="Left">

                                            <StackPanel DockPanel.Dock="Left">

                                                <StackPanel Margin="0,30,0,0" Orientation="Horizontal">

                                                    <materialDesign:PackIcon
                                                        Width="30"
                                                        Height="30"
                                                        VerticalAlignment="Center"
                                                        Foreground="DimGray"
                                                        Kind="Place" />

                                                    <TextBox
                                                        Width="400"
                                                        Margin="10,0,0,0"
                                                        materialDesign:HintAssist.Hint="Tour Name"
                                                        FontSize="18"
                                                        IsEnabled="False">
                                                        <TextBox.Text>
                                                            <Binding
                                                                Mode="TwoWay"
                                                                Path="Tour_Name"
                                                                UpdateSourceTrigger="PropertyChanged">
                                                                <Binding.ValidationRules />
                                                            </Binding>
                                                        </TextBox.Text>
                                                    </TextBox>
                                                </StackPanel>

                                                <StackPanel Margin="0,70,0,0" Orientation="Horizontal">

                                                    <DatePicker
                                                        Width="450"
                                                        Height="60"
                                                        materialDesign:HintAssist.Hint="Department Date"
                                                        FontSize="22"
                                                        SelectedDateFormat="Short"
                                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}">
                                                        <DatePicker.SelectedDate>
                                                            <Binding
                                                                Mode="TwoWay"
                                                                Path="Time_Department"
                                                                StringFormat="{}{0: dd/MM/yyyy}"
                                                                UpdateSourceTrigger="PropertyChanged" />
                                                        </DatePicker.SelectedDate>
                                                    </DatePicker>

                                                </StackPanel>
                                            </StackPanel>

                                        </DockPanel>

                                        <DockPanel Margin="20,20,30,20" HorizontalAlignment="Right">

                                            <StackPanel DockPanel.Dock="Left">

                                                <StackPanel Margin="0,30,0,0" Orientation="Horizontal">

                                                    <materialDesign:PackIcon
                                                        Width="30"
                                                        Height="30"
                                                        VerticalAlignment="Center"
                                                        Foreground="DimGray"
                                                        Kind="Clock" />

                                                    <TextBox
                                                        Width="50"
                                                        Margin="10,0,0,0"
                                                        HorizontalContentAlignment="Center"
                                                        VerticalContentAlignment="Center"
                                                        materialDesign:HintAssist.Hint="Day"
                                                        FontSize="18">
                                                        <TextBox.Text>
                                                            <Binding
                                                                Mode="TwoWay"
                                                                Path="Time_Day"
                                                                UpdateSourceTrigger="PropertyChanged">
                                                                <Binding.ValidationRules />
                                                            </Binding>
                                                        </TextBox.Text>
                                                    </TextBox>

                                                    <TextBlock
                                                        Margin="8,0"
                                                        Padding="8"
                                                        FontSize="19"
                                                        Text="Day(s)" />

                                                    <TextBox
                                                        Width="50"
                                                        Margin="10,0,0,0"
                                                        HorizontalContentAlignment="Center"
                                                        VerticalContentAlignment="Center"
                                                        materialDesign:HintAssist.Hint="Night"
                                                        FontSize="18">
                                                        <TextBox.Text>
                                                            <Binding
                                                                Mode="TwoWay"
                                                                Path="Time_Night"
                                                                UpdateSourceTrigger="PropertyChanged">
                                                                <Binding.ValidationRules />
                                                            </Binding>
                                                        </TextBox.Text>
                                                    </TextBox>

                                                    <TextBlock
                                                        Margin="8,0"
                                                        Padding="8"
                                                        FontSize="19"
                                                        Text="Night(s)" />

                                                </StackPanel>

                                                <StackPanel Margin="0,60,0,0" Orientation="Horizontal">

                                                    <DatePicker
                                                        Width="450"
                                                        Height="60"
                                                        materialDesign:HintAssist.Hint="End Date"
                                                        DisplayDateStart="{Binding Time_Department}"
                                                        FontSize="22"
                                                        SelectedDateFormat="Short"
                                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}">
                                                        <DatePicker.SelectedDate>
                                                            <Binding
                                                                Mode="TwoWay"
                                                                Path="Time_End"
                                                                StringFormat="{}{0: dd/MM/yyyy}"
                                                                UpdateSourceTrigger="PropertyChanged" />
                                                        </DatePicker.SelectedDate>
                                                    </DatePicker>

                                                </StackPanel>
                                            </StackPanel>

                                        </DockPanel>
                                    </Grid>
                                </Grid>

                            </TabItem>

                            <TabItem
                                Width="290"
                                Background="Transparent"
                                Style="{StaticResource MaterialDesignNavigationRailTabItem}"
                                TabIndex="1">

                                <TabItem.Header>
                                    <StackPanel
                                        Width="240"
                                        Height="50"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            Margin="20,0"
                                            VerticalAlignment="Center"
                                            Kind="PlaceOutline" />
                                        <TextBlock
                                            Margin="20,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="24"
                                            Foreground="Black"
                                            Text="Location" />
                                    </StackPanel>
                                </TabItem.Header>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <StackPanel Margin="0,24,0,0" VerticalAlignment="Center">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontFamily="helvetica"
                                            FontSize="24"
                                            Foreground="Black"
                                            Text="Register Tour Location" />
                                    </StackPanel>

                                    <Border
                                        Grid.Row="1"
                                        Width="360"
                                        Height="50"
                                        Margin="20,20,40,5"
                                        Background="#FAFAFA"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        CornerRadius="10">

                                        <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                            <materialDesign:PackIcon
                                                Width="25"
                                                Height="30"
                                                Margin="0,0,0,0"
                                                VerticalAlignment="Center"
                                                Foreground="DimGray"
                                                Kind="Search" />
                                            <TextBox
                                                Width="300"
                                                Height="40"
                                                Margin="10,2,0,0"
                                                materialDesign:HintAssist.Hint="Search"
                                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                BorderBrush="Transparent"
                                                FontSize="18"
                                                Style="{StaticResource MaterialDesignTextBoxBase}">
                                                <TextBox.Text>
                                                    <Binding Path="FilterLocationText" UpdateSourceTrigger="PropertyChanged">
                                                        <Binding.ValidationRules />
                                                    </Binding>
                                                </TextBox.Text>
                                            </TextBox>
                                        </StackPanel>
                                    </Border>

                                    <Grid Grid.Row="2" Margin="20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Margin="16">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontFamily="helvetica"
                                                FontSize="24"
                                                Foreground="Black"
                                                Text="Select Location" />

                                            <ItemsControl Grid.IsSharedSizeScope="True" ItemsSource="{Binding LocationList}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border
                                                            x:Name="BorderPlace"
                                                            Padding="8"
                                                            BorderBrush="Black"
                                                            BorderThickness="1">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition SharedSizeGroup="Checkerz" />
                                                                    <ColumnDefinition />
                                                                </Grid.ColumnDefinitions>
                                                                <CheckBox
                                                                    VerticalAlignment="Center"
                                                                    Command="{Binding DataContext.LocationItemCheckCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                                                                    CommandParameter="{Binding CB_ID}"
                                                                    IsChecked="{Binding IsSelected}" />
                                                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                                    <TextBlock FontWeight="Bold" Text="{Binding CB_Name}" />
                                                                    <TextBlock Text="{Binding CB_Sub_Name}" />
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                        <DataTemplate.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                <Setter TargetName="BorderPlace" Property="Background" Value="{DynamicResource MaterialDesignSelection}" />
                                                            </DataTrigger>
                                                        </DataTemplate.Triggers>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>


                                        <StackPanel Grid.Column="1" Margin="16">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontFamily="helvetica"
                                                FontSize="24"
                                                Foreground="Black"
                                                Text="Location Selected" />
                                            <ItemsControl Grid.IsSharedSizeScope="True" ItemsSource="{Binding LocationSelectedList}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border
                                                            x:Name="BorderPlace"
                                                            Padding="8"
                                                            BorderBrush="Black"
                                                            BorderThickness="1">

                                                            <StackPanel Margin="8,0,0,0">
                                                                <TextBlock FontWeight="Bold" Text="{Binding LOCATION_NAME}" />
                                                                <TextBlock Text="{Binding PLACE_NAME}" />
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>

                                    </Grid>
                                </Grid>
                            </TabItem>

                            <TabItem
                                Width="290"
                                Background="Transparent"
                                Style="{StaticResource MaterialDesignNavigationRailTabItem}"
                                TabIndex="2">
                                <TabItem.Header>
                                    <StackPanel
                                        Width="240"
                                        Height="50"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            Margin="20,0"
                                            VerticalAlignment="Center"
                                            Kind="Money" />
                                        <TextBlock
                                            Margin="20,0,20,8.6"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            FontSize="24"
                                            Foreground="Black"
                                            Text="Price" />
                                    </StackPanel>
                                </TabItem.Header>

                                <TabControl
                                    Margin="10,0,10,0"
                                    materialDesign:ColorZoneAssist.Mode="Standard"
                                    materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                    Background="Transparent"
                                    Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                                    TabStripPlacement="Left">
                                    <TabItem
                                        Margin="4 16"
                                        Background="Transparent"
                                        Style="{StaticResource MaterialDesignNavigationRailTabItem}"
                                        TabIndex="0">
                                        <TabItem.Header>
                                            <TextBlock FontSize="18" Text="Hotel" />
                                        </TabItem.Header>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>

                                            <StackPanel Margin="0,24,0,0" VerticalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontFamily="helvetica"
                                                    FontSize="24"
                                                    Foreground="Black"
                                                    Text="Register Tour Hotel" />
                                            </StackPanel>

                                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                <Border
                                                    Grid.Row="1"
                                                    Width="360"
                                                    Height="50"
                                                    Margin="160,10,40,5"
                                                    Background="#FAFAFA"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="10">

                                                    <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                                        <materialDesign:PackIcon
                                                            Width="25"
                                                            Height="30"
                                                            Margin="0,0,0,0"
                                                            VerticalAlignment="Center"
                                                            Foreground="DimGray"
                                                            Kind="Search" />
                                                        <TextBox
                                                            Width="300"
                                                            Height="40"
                                                            Margin="10,2,0,0"
                                                            materialDesign:HintAssist.Hint="Search"
                                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                            BorderBrush="Transparent"
                                                            FontSize="18"
                                                            Style="{StaticResource MaterialDesignTextBoxBase}">
                                                            <TextBox.Text>
                                                                <Binding Path="FilterHotelText" UpdateSourceTrigger="PropertyChanged">
                                                                    <Binding.ValidationRules />
                                                                </Binding>
                                                            </TextBox.Text>
                                                        </TextBox>
                                                    </StackPanel>
                                                </Border>
                                                <Button
                                                    Width="100"
                                                    Height="40"
                                                    Margin="10,0"
                                                    VerticalAlignment="Center"
                                                    Command="{Binding SaveHotelPriceCommand}"
                                                    Content="Save"
                                                    Foreground="#1885F2"
                                                    Style="{StaticResource SaveButton}" />

                                                <TextBlock
                                                    Width="auto"
                                                    Margin="10,0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="20"
                                                    Foreground="#F36E6B"
                                                    Text="{Binding HotelPriceNotify, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>

                                            <Grid Grid.Row="2" Margin="20">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Margin="16">
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontFamily="helvetica"
                                                        FontSize="24"
                                                        Foreground="Black"
                                                        Text="Select Hotel" />

                                                    <ItemsControl Grid.IsSharedSizeScope="True" ItemsSource="{Binding HotelList}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border
                                                                    x:Name="BorderPlace"
                                                                    Padding="8"
                                                                    BorderBrush="Black"
                                                                    BorderThickness="1">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition SharedSizeGroup="Checkerz" />
                                                                            <ColumnDefinition />
                                                                        </Grid.ColumnDefinitions>
                                                                        <CheckBox
                                                                            VerticalAlignment="Center"
                                                                            Command="{Binding DataContext.HotelItemCheckCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                                                                            CommandParameter="{Binding CB_ID}"
                                                                            IsChecked="{Binding IsSelected}" />
                                                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                                            <TextBlock FontWeight="Bold" Text="{Binding CB_Name}" />
                                                                            <TextBlock Text="{Binding Hotel_Price}" />
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </Border>
                                                                <DataTemplate.Triggers>
                                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                        <Setter TargetName="BorderPlace" Property="Background" Value="{DynamicResource MaterialDesignSelection}" />
                                                                    </DataTrigger>
                                                                </DataTemplate.Triggers>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>


                                                <StackPanel Grid.Column="1" Margin="16">
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontFamily="helvetica"
                                                        FontSize="24"
                                                        Foreground="Black"
                                                        Text="Hotel Selected" />
                                                    <ItemsControl Grid.IsSharedSizeScope="True" ItemsSource="{Binding HotelSelectedList}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border
                                                                    x:Name="BorderPlace"
                                                                    Padding="8"
                                                                    BorderBrush="Black"
                                                                    BorderThickness="1">

                                                                    <StackPanel Margin="8,0,0,0">
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBlock
                                                                                FontSize="12"
                                                                                FontWeight="Bold"
                                                                                Text="Hotel Name: " />

                                                                            <TextBlock
                                                                                FontSize="12"
                                                                                FontWeight="Bold"
                                                                                Text="{Binding HOTEL_NAME}" />
                                                                        </StackPanel>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBlock FontSize="12" Text="Hotel Price: " />
                                                                            <TextBlock FontSize="12" Text="{Binding HOTEL_PRICE}" />
                                                                            <TextBlock FontSize="12" Text=" VND" />
                                                                        </StackPanel>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBlock FontSize="12" Text="Day : " />
                                                                            <TextBox
                                                                                Width="100"
                                                                                Margin="8,0,0,0"
                                                                                HorizontalAlignment="Left"
                                                                                materialDesign:HintAssist.Hint="Amount"
                                                                                FontSize="12">
                                                                                <TextBox.Text>
                                                                                    <Binding
                                                                                        Mode="TwoWay"
                                                                                        Path="HOTEL_DAY"
                                                                                        UpdateSourceTrigger="PropertyChanged">
                                                                                        <Binding.ValidationRules />
                                                                                    </Binding>
                                                                                </TextBox.Text>
                                                                            </TextBox>
                                                                        </StackPanel>

                                                                    </StackPanel>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>

                                            </Grid>

                                        </Grid>
                                    </TabItem>

                                    <TabItem
                                        Width="80"
                                        Margin="4 16"
                                        Background="Transparent"
                                        Style="{StaticResource MaterialDesignNavigationRailTabItem}"
                                        TabIndex="1">
                                        <TabItem.Header>
                                            <TextBlock FontSize="18" Text="Transport" />
                                        </TabItem.Header>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>

                                            <StackPanel Margin="0,24,0,0" VerticalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontFamily="helvetica"
                                                    FontSize="24"
                                                    Foreground="Black"
                                                    Text="Register Tour Transport" />
                                            </StackPanel>

                                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                <Border
                                                    Width="360"
                                                    Height="50"
                                                    Margin="160,10,40,5"
                                                    Background="#FAFAFA"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="10">

                                                    <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                                        <materialDesign:PackIcon
                                                            Width="25"
                                                            Height="30"
                                                            Margin="0,0,0,0"
                                                            VerticalAlignment="Center"
                                                            Foreground="DimGray"
                                                            Kind="Search" />
                                                        <TextBox
                                                            Width="300"
                                                            Height="40"
                                                            Margin="10,2,0,0"
                                                            materialDesign:HintAssist.Hint="Search"
                                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                            BorderBrush="Transparent"
                                                            FontSize="18"
                                                            Style="{StaticResource MaterialDesignTextBoxBase}">
                                                            <TextBox.Text>
                                                                <Binding Path="FilterTransportText" UpdateSourceTrigger="PropertyChanged">
                                                                    <Binding.ValidationRules />
                                                                </Binding>
                                                            </TextBox.Text>
                                                        </TextBox>
                                                    </StackPanel>
                                                </Border>

                                                <Button
                                                    Width="100"
                                                    Height="40"
                                                    Margin="10,0"
                                                    VerticalAlignment="Center"
                                                    Command="{Binding SaveTransportPriceCommand}"
                                                    Content="Save"
                                                    Foreground="#1885F2"
                                                    Style="{StaticResource SaveButton}" />

                                                <TextBlock
                                                    Width="auto"
                                                    Margin="10,0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="20"
                                                    Foreground="#F36E6B"
                                                    Text="{Binding TransportPriceNotify, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>

                                            <Grid Grid.Row="2" Margin="20">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Margin="16">
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontFamily="helvetica"
                                                        FontSize="24"
                                                        Foreground="Black"
                                                        Text="Select Transport" />

                                                    <ItemsControl Grid.IsSharedSizeScope="True" ItemsSource="{Binding TransportList}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border
                                                                    x:Name="BorderPlace"
                                                                    Padding="8"
                                                                    BorderBrush="Black"
                                                                    BorderThickness="1">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition SharedSizeGroup="Checkerz" />
                                                                            <ColumnDefinition />
                                                                        </Grid.ColumnDefinitions>
                                                                        <CheckBox
                                                                            VerticalAlignment="Center"
                                                                            Command="{Binding DataContext.TransportItemCheckCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                                                                            CommandParameter="{Binding CB_ID}"
