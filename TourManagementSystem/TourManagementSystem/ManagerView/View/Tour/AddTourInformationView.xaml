                                                                            <TextBlock
                                                                                FontSize="12"
                                                                                FontWeight="Bold"
                                                                                Text="Transport Name: " />
                                                                            <TextBlock
                                                                                FontSize="12"
                                                                                FontWeight="Bold"
                                                                                Text="{Binding TRANSPORT_NAME}" />
                                                                        </StackPanel>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBlock FontSize="12" Text="Transport Price: " />
                                                                            <TextBlock FontSize="12" Text="{Binding TRANSPORT_PRICE}" />
                                                                            <TextBlock FontSize="12" Text=" VND" />
                                                                        </StackPanel>

                                                                        <StackPanel IsEnabled="{Binding TRANSPORT_IS_AMOUNT}" Orientation="Horizontal">
                                                                            <TextBlock FontSize="12" Text="Amount : " />
                                                                            <ComboBox
                                                                                Width="100"
                                                                                Margin="10,0,0,0"
                                                                                DisplayMemberPath="CB_ID"
                                                                                FontSize="12"
                                                                                Foreground="DimGray"
                                                                                ItemsSource="{Binding CB_TransportAmount}"
                                                                                Text="{Binding TRANSPORT_AMOUNT, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                                        </StackPanel>

                                                                    </StackPanel>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>

                                            </Grid>

                                        </Grid>
                                    </TabItem>

                                    <TabItem
                                        Margin="4 16"
                                        Background="Transparent"
                                        Style="{StaticResource MaterialDesignNavigationRailTabItem}"
                                        TabIndex="2">
                                        <TabItem.Header>
                                            <TextBlock FontSize="18" Text="Mission" />
                                        </TabItem.Header>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>

                                            <StackPanel Margin="0,24,0,0" VerticalAlignment="Center">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontFamily="helvetica"
                                                    FontSize="24"
                                                    Foreground="Black"
                                                    Text="Register Tour Mission" />
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="1"
                                                Margin="40"
                                                Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="10,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="20">
                                                    Number Of Mission
                                                </TextBlock>

                                                <TextBlock
                                                    Width="40"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="20"
                                                    Text="{Binding MissionCount, UpdateSourceTrigger=PropertyChanged}" />

                                                <Button
                                                    Width="100"
                                                    Height="40"
                                                    Margin="10,0"
                                                    Command="{Binding AddMissionCommand}"
                                                    Content="Add"
                                                    Foreground="#0f6f68"
                                                    Style="{StaticResource AddButton}" />

                                                <Button
                                                    Width="100"
                                                    Height="40"
                                                    Margin="10,0"
                                                    Command="{Binding RemoveMissionCommand}"
                                                    Content="Remove"
                                                    Foreground="#F36E6B"
                                                    Style="{StaticResource AddButton}" />

                                                <Button
                                                    Width="100"
                                                    Height="40"
                                                    Margin="10,0"
                                                    Command="{Binding SaveMissionPriceCommand}"
                                                    Content="Save"
                                                    Foreground="#1885F2"
                                                    Style="{StaticResource SaveButton}" />

                                                <TextBlock
                                                    Width="auto"
                                                    Margin="10,0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="20"
                                                    Foreground="#F36E6B"
                                                    Text="{Binding MissionPriceNotify, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>

                                            <ItemsControl Grid.Row="2" ItemsSource="{Binding MissionList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Vertical" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border
                                                            Height="auto"
                                                            Margin="10"
                                                            Padding="10"
                                                            BorderBrush="Black"
                                                            BorderThickness="1">
                                                            <StackPanel Margin="10">

                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="auto" />
                                                                        <ColumnDefinition Width="auto" />
                                                                    </Grid.ColumnDefinitions>

                                                                    <StackPanel Margin="64,4,120,4" Orientation="Horizontal">
                                                                        <TextBlock
                                                                            VerticalAlignment="Center"
                                                                            FontSize="18"
                                                                            Foreground="DimGray"
                                                                            Style="{StaticResource MaterialDesignButtonTextBlock}"
                                                                            Text="Responsibility : " />
                                                                        <ComboBox
                                                                            Width="224"
                                                                            Margin="10,0,0,0"
                                                                            materialDesign:HintAssist.Hint="Mission Responsibility"
                                                                            FontSize="18"
                                                                            Foreground="DimGray"
                                                                            Text="{Binding Mission_Responsibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                                            <ComboBoxItem Content="Driver" />
                                                                            <ComboBoxItem Content="Guide" />
                                                                            <ComboBoxItem Content="Guard" />
                                                                        </ComboBox>
                                                                    </StackPanel>

                                                                    <StackPanel
                                                                        Grid.Column="1"
                                                                        Margin="62,4,120,4"
                                                                        HorizontalAlignment="Right"
                                                                        Orientation="Horizontal">
                                                                        <TextBlock
                                                                            VerticalAlignment="Center"
                                                                            FontSize="18"
                                                                            Foreground="DimGray"
                                                                            Style="{StaticResource MaterialDesignButtonTextBlock}"
                                                                            Text="Price: " />
                                                                        <TextBox
                                                                            Width="360"
                                                                            Margin="10,0,0,0"
                                                                            materialDesign:HintAssist.Hint="Price"
                                                                            materialDesign:TextFieldAssist.PrefixText="VND"
                                                                            FontSize="18"
                                                                            Text="{Binding Mission_Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                                    </StackPanel>

                                                                </Grid>

                                                                <StackPanel Margin="64,4,120,4" Orientation="Horizontal">
                                                                    <TextBlock
                                                                        VerticalAlignment="Center"
                                                                        FontSize="18"
                                                                        Foreground="DimGray"
                                                                        Style="{StaticResource MaterialDesignButtonTextBlock}"
                                                                        Text="Amount In Mision : " />
                                                                    <TextBox
                                                                        Width="190"
                                                                        Margin="10,0,0,0"
                                                                        materialDesign:HintAssist.Hint="0"
                                                                        FontSize="18"
                                                                        Text="{Binding Mission_Count, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                                </StackPanel>

                                                                <TextBox
                                                                    Width="1020"
                                                                    Height="220"
                                                                    Margin="20,10,20,0"
                                                                    HorizontalAlignment="Left"
                                                                    materialDesign:HintAssist.Hint="Content"
                                                                    AcceptsReturn="True"
                                                                    FontSize="17"
                                                                    Foreground="DimGray"
                                                                    MinLines="8"
                                                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                                    Text="{Binding Mission_Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                    TextWrapping="Wrap" />
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                    </TabItem>

                                    <TabItem
                                        Margin="4 16"
                                        Background="Transparent"
                                        Style="{StaticResource MaterialDesignNavigationRailTabItem}"
                                        TabIndex="3">
                                        <TabItem.Header>
                                            <TextBlock FontSize="18" Text="Total" />
                                        </TabItem.Header>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Row="0" Orientation="Vertical">
                                                <TextBlock
                                                    Margin="100,12"
                                                    FontSize="24"
                                                    Foreground="DimGray"
                                                    Style="{StaticResource MaterialDesignButtonTextBlock}"
                                                    Text="Hotel List" />
                                                <DataGrid
                                                    Width="900"
                                                    Height="auto"
                                                    VerticalAlignment="Top"
                                                    materialDesign:DataGridAssist.CellPadding="12 8 0 8"
                                                    materialDesign:DataGridAssist.ColumnHeaderPadding="20 8 0 8"
                                                    AllowDrop="True"
                                                    AutoGenerateColumns="False"
                                                    CanUserAddRows="False"
                                                    CanUserDeleteRows="False"
                                                    CanUserReorderColumns="False"
                                                    CanUserSortColumns="True"
                                                    GridLinesVisibility="Vertical"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding HotelSelectedList}"
                                                    SelectionMode="Single">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn
                                                            Width="0.05*"
                                                            Binding="{Binding HOTEL_ID}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Header="ID" />
                                                        <DataGridTextColumn
                                                            Width="0.15*"
                                                            Binding="{Binding HOTEL_NAME}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Header="Name" />
                                                        <DataGridTextColumn
                                                            Width="0.15*"
                                                            Binding="{Binding HOTEL_ADDRESS}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Header="Address" />
                                                        <DataGridTextColumn
                                                            Width="0.15*"
                                                            Binding="{Binding PLACE_NAME}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Header="Place" />
                                                        <DataGridTextColumn
                                                            Width="0.15*"
                                                            Binding="{Binding HOTEL_PHONE_NUMBER}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Header="Phone Number" />
                                                        <DataGridTextColumn
                                                            Width="0.15*"
                                                            Binding="{Binding HOTEL_EMAIL}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Header="Email" />
                                                        <DataGridTextColumn
                                                            Width="0.15*"
                                                            Binding="{Binding HOTEL_PRICE}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Header="Price" />
                                                        <DataGridTextColumn
                                                            Width="0.1*"
                                                            Binding="{Binding HOTEL_DAY}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Header="Day" />
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                                <StackPanel
                                                    Margin="0,4,120,4"
                                                    HorizontalAlignment="Right"
                                                    Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="16"
                                                        Foreground="DimGray"
                                                        Style="{StaticResource MaterialDesignButtonTextBlock}"
                                                        Text="Total Price: " />
                                                    <TextBlock
                                                        FontSize="16"
                                                        Foreground="DimGray"
                                                        Style="{StaticResource MaterialDesignButtonTextBlock}"
                                                        Text="{Binding TotalHotelPrice}" />
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Row="1" Orientation="Vertical">
                                                <TextBlock
                                                    Margin="100,12"
                                                    FontSize="24"
                                                    Foreground="DimGray"
                                                    Style="{StaticResource MaterialDesignButtonTextBlock}"
                                                    Text="Transport List" />

                                                <DataGrid
                                                    Grid.Row="1"
                                                    Width="900"
                                                    Height="auto"
                                                    VerticalAlignment="Top"
                                                    materialDesign:DataGridAssist.CellPadding="12 8 0 8"
                                                    materialDesign:DataGridAssist.ColumnHeaderPadding="20 8 0 8"
                                                    AllowDrop="True"
                                                    AutoGenerateColumns="False"
                                                    CanUserAddRows="False"
                                                    CanUserDeleteRows="False"
                                                    CanUserReorderColumns="False"
                                                    CanUserSortColumns="True"
                                                    GridLinesVisibility="Vertical"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding TransportSelectedList}"
                                                    SelectionMode="Single">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn
                                                            Width="0.05*"
                                                            Binding="{Binding TRANSPORT_ID}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Header="ID" />
                                                        <DataGridTextColumn
                                                            Width="0.2*"
                                                            Binding="{Binding TRANSPORT_NAME}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Header="Name" />
                                                        <DataGridTextColumn
                                                            Width="0.2*"
                                                            Binding="{Binding TRANSPORT_TYPETRANS}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Header="Type" />
                                                        <DataGridTextColumn
                                                            Width="0.2*"
                                                            Binding="{Binding TRANSPORT_AMOUNT}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Header="Amount" />
                                                        <DataGridTextColumn
                                                            Width="0.2*"
                                                            Binding="{Binding TRANSPORT_PRICE}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Header="Price" />
                                                    </DataGrid.Columns>
                                                </DataGrid>

                                                <StackPanel
                                                    Margin="0,4,120,4"
                                                    HorizontalAlignment="Right"
                                                    Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="16"
                                                        Foreground="DimGray"
                                                        Style="{StaticResource MaterialDesignButtonTextBlock}"
                                                        Text="Total Price: " />
                                                    <TextBlock
                                                        FontSize="16"
                                                        Foreground="DimGray"
                                                        Style="{StaticResource MaterialDesignButtonTextBlock}"
                                                        Text="{Binding TotalTransportPrice}" />
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Row="2" Orientation="Vertical">
                                                <TextBlock
                                                    Margin="100,12"
                                                    FontSize="24"
                                                    Foreground="DimGray"
                                                    Style="{StaticResource MaterialDesignButtonTextBlock}"
                                                    Text="Service List" />

                                                <DataGrid
                                                    Grid.Row="1"
                                                    Width="900"
                                                    Height="auto"
                                                    VerticalAlignment="Top"
                                                    materialDesign:DataGridAssist.CellPadding="12 8 0 8"
                                                    materialDesign:DataGridAssist.ColumnHeaderPadding="20 8 0 8"
                                                    AllowDrop="True"
                                                    AutoGenerateColumns="False"
                                                    CanUserAddRows="False"
                                                    CanUserDeleteRows="False"
                                                    CanUserReorderColumns="False"
                                                    CanUserSortColumns="True"
                                                    GridLinesVisibility="Vertical"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding MissionList}"
                                                    SelectionMode="Single">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn
                                                            Width="0.1*"
                                                            Binding="{Binding Mission_ID}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Foreground="DarkSlateGray"
                                                            Header="ID" />
                                                        <DataGridTextColumn
                                                            Width="0.2*"
                                                            Binding="{Binding Mission_Responsibility}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Foreground="DarkSlateGray"
                                                            Header="Responsibility" />
                                                        <DataGridTextColumn
                                                            Width="0.1*"
                                                            Binding="{Binding Mission_Count}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Foreground="DarkSlateGray"
                                                            Header="Amount" />
                                                        <DataGridTextColumn
                                                            Width="0.2*"
                                                            Binding="{Binding Mission_Price}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Foreground="DarkSlateGray"
                                                            Header="Price" />
                                                        <DataGridTextColumn
                                                            Width="0.4*"
                                                            Binding="{Binding Mission_Description}"
                                                            ElementStyle="{StaticResource WrapText}"
                                                            Foreground="DarkSlateGray"
                                                            Header="Description" />
                                                    </DataGrid.Columns>
                                                </DataGrid>

                                                <StackPanel
                                                    Margin="0,4,120,4"
                                                    HorizontalAlignment="Right"
                                                    Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="16"
                                                        Foreground="DimGray"
                                                        Style="{StaticResource MaterialDesignButtonTextBlock}"
                                                        Text="Total Price: " />
                                                    <TextBlock
                                                        FontSize="16"
                                                        Foreground="DimGray"
                                                        Style="{StaticResource MaterialDesignButtonTextBlock}"
                                                        Text="{Binding TotalMissionPrice}" />
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="3"
                                                Margin="-100,40,0,20"
                                                HorizontalAlignment="Center"
                                                Orientation="Horizontal">
                                                <TextBlock
                                                    FontSize="24"
                                                    Foreground="DimGray"
                                                    Style="{StaticResource MaterialDesignButtonTextBlock}"
                                                    Text="Total Price: " />
                                                <TextBlock
                                                    FontSize="24"
                                                    Foreground="DimGray"
                                                    Style="{StaticResource MaterialDesignButtonTextBlock}"
                                                    Text="{Binding TotalPrice}" />
                                            </StackPanel>
                                        </Grid>

                                    </TabItem>
                                </TabControl>
                            </TabItem>

                            <TabItem
                                Width="290"
                                Background="Transparent"
                                Style="{StaticResource MaterialDesignNavigationRailTabItem}"
                                TabIndex="2">
                                <TabItem.Header>
                                    <StackPanel
                                        Width="240"
                                        Height="50"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            Margin="20,0"
                                            VerticalAlignment="Center"
                                            Kind="TimelineClockOutline" />
                                        <TextBlock
                                            Margin="20,0,20,8.6"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            FontSize="24"
                                            Foreground="Black"
                                            Text="Schedule" />
                                    </StackPanel>
                                </TabItem.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <StackPanel Margin="0,24,0,0" VerticalAlignment="Center">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontFamily="helvetica"
                                            FontSize="24"
                                            Foreground="Black"
                                            Text="Register Tour Schedule" />
                                    </StackPanel>

                                    <StackPanel
                                        Grid.Row="1"
                                        Margin="40"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Margin="10,0"
                                            VerticalAlignment="Center"
                                            FontSize="20">
                                            Number Of Content
                                        </TextBlock>

                                        <TextBlock
                                            Width="40"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="20"
                                            Text="{Binding ScheduleCount, UpdateSourceTrigger=PropertyChanged}" />

                                        <Button
                                            Width="100"
                                            Height="40"
                                            Margin="10,0"
                                            Command="{Binding AddScheduleCommand}"
                                            Content="Add"
                                            Foreground="#0f6f68"
                                            Style="{StaticResource AddButton}" />

                                        <Button
                                            Width="100"
                                            Height="40"
                                            Margin="10,0"
                                            Command="{Binding RemoveScheduleCommand}"
                                            Content="Remove"
                                            Foreground="#F36E6B"
                                            Style="{StaticResource AddButton}" />
                                    </StackPanel>

                                    <ItemsControl Grid.Row="2" ItemsSource="{Binding ScheduleList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border
                                                    Margin="10"
                                                    Padding="10"
                                                    BorderBrush="Black"
                                                    BorderThickness="1">
                                                    <StackPanel Margin="10">

                                                        <TextBox
                                                            Margin="20,10,20,10"
                                                            materialDesign:HintAssist.Hint="Days"
                                                            FontSize="22"
                                                            Text="{Binding SCHEDULE_DAY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                                        <TextBox
                                                            Width="1020"
                                                            Height="220"
                                                            Margin="20,10,20,0"
                                                            HorizontalAlignment="Left"
                                                            materialDesign:HintAssist.Hint="Content"
                                                            AcceptsReturn="True"
                                                            FontSize="17"
                                                            Foreground="DimGray"
                                                            MinLines="8"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding SCHEDULE_CONTENT, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                            TextWrapping="Wrap" />
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </TabItem>

                        </TabControl>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2" Orientation="Horizontal">

                        <Button
                            Width="200"
                            Height="60"
                            Margin="340,16,20,12"
                            Command="{Binding AddTourInformationCommand}"
                            CommandParameter="{Binding ElementName=contentControlAdd}"
                            Content="Confirm"
                            Foreground="#1885F2"
                            Style="{StaticResource ResourceKey=ConfirmButton}" />

                        <Button
                            Width="200"
                            Height="60"
                            Margin="20,16,20,2"
                            Command="{Binding CancelCommand}"
                            CommandParameter="{Binding ElementName=contentControlAdd}"
                            Content="Cancel"
                            Foreground="#F36E6B"
                            Style="{StaticResource ResourceKey=CancelButton}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </ContentControl>
</UserControl>
