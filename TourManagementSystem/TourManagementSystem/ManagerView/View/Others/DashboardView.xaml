                <StackPanel
                    Grid.Row="4"
                    Margin="32,10"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="24"
                        Foreground="DimGray"
                        Style="{StaticResource MaterialDesignButtonTextBlock}"
                        Text="Number of Record: " />
                    <TextBlock
                        Margin="16,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="24"
                        Foreground="DimGray"
                        Style="{StaticResource MaterialDesignButtonTextBlock}"
                        Text="{Binding Record_Amount}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>