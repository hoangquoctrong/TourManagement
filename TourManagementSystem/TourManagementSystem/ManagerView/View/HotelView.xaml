<UserControl
    x:Class="TourManagementSystem.ManagerView.View.HotelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TourManagementSystem.ManagerView.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1190"
    Height="620"
    mc:Ignorable="d">
    <UserControl.Style>
        <Style>
            <Style.Triggers>
                <EventTrigger RoutedEvent="UserControl.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                From="0.0"
                                To="1.0"
                                Duration="0:0:0.5" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <UserControl.Resources>
        <Style x:Key="WrapText" TargetType="{x:Type TextBlock}">
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="BorderThickness" Value="0.5" />
            <Setter Property="BorderBrush" Value="#D6D6D6" />
            <Setter Property="Background" Value="#FFFFFF" />
        </Style>
        <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="{x:Type DataGridCell}">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="#d6d6d6" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FDF8EA" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <ContentControl x:Name="contentControlMain" Height="620">
        <Grid Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Column="0"
                    Width="400"
                    Height="50"
                    Margin="40,5,20,5"
                    Background="#FAFAFA"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="10">

                    <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="25"
                            Height="30"
                            Margin="0,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="DimGray"
                            Kind="Search" />
                        <TextBox
                            Width="300"
                            Height="40"
                            Margin="10,2,0,0"
                            materialDesign:HintAssist.Hint="Search"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            BorderBrush="Transparent"
                            FontSize="18"
                            Style="{StaticResource MaterialDesignTextBoxBase}">
                            <TextBox.Text>
                                <Binding Path="FilterText" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules />
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ComboBox
                        Name="cbSearch"
                        Width="140"
                        Margin="10"
                        DisplayMemberPath="CB_Name"
                        FontSize="18"
                        Foreground="DimGray"
                        ItemsSource="{Binding CB_HotelList, Mode=TwoWay}"
                        SelectedValue="{Binding CB_HotelSelected}">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </StackPanel>

                <Button
                    Grid.Column="2"
                    Width="150"
                    Height="40"
                    Margin="30,5,30,5"
                    HorizontalAlignment="Right"
                    Command="{Binding AddHotelCommand}"
                    CommandParameter="{Binding ElementName=contentControlMain}"
                    Content="Add New Hotel"
                    Foreground="#0f6f68"
                    Style="{StaticResource AddButton}" />

            </Grid>

            <DataGrid
                Grid.Row="1"
                Width="1170"
                Height="550"
                VerticalAlignment="Top"
                materialDesign:DataGridAssist.CellPadding="12 8 0 8"
                materialDesign:DataGridAssist.ColumnHeaderPadding="20 8 0 8"
                AllowDrop="True"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserReorderColumns="False"
                CanUserSortColumns="True"
                GridLinesVisibility="Vertical"
                IsReadOnly="True"
                ItemsSource="{Binding HotelItems}"
                SelectedItem="{Binding HotelSelected}"
                SelectionMode="Single"
                VerticalScrollBarVisibility="Visible">
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HOTEL_IS_DELETE}" Value="false">
                                <Setter Property="Background" Value="White" />
                                <Setter Property="Foreground" Value="DarkSlateGray" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding HOTEL_IS_DELETE}" Value="true">
                                <Setter Property="Background" Value="White" />
                                <Setter Property="Foreground" Value="Red" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.InputBindings>
                    <MouseBinding
                        Command="{Binding ShowDetailHotelCommand}"
                        CommandParameter="{Binding ElementName=contentControlMain}"
                        Gesture="LeftDoubleClick" />
                </DataGrid.InputBindings>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="0.05*"
                        Binding="{Binding HOTEL_ID}"
                        ElementStyle="{StaticResource WrapText}"
                        Header="ID" />
                    <DataGridTextColumn
                        Width="0.15*"
                        Binding="{Binding HOTEL_NAME}"
                        ElementStyle="{StaticResource WrapText}"
                        Header="Name" />
                    <DataGridTextColumn
                        Width="0.2*"
                        Binding="{Binding HOTEL_ADDRESS}"
                        ElementStyle="{StaticResource WrapText}"
                        Header="Address" />
                    <DataGridTextColumn
                        Width="0.15*"
                        Binding="{Binding PLACE_NAME}"
                        ElementStyle="{StaticResource WrapText}"
                        Header="Place" />
                    <DataGridTextColumn
                        Width="0.15*"
                        Binding="{Binding HOTEL_PHONE_NUMBER}"
                        ElementStyle="{StaticResource WrapText}"
                        Header="Phone Number" />
                    <DataGridTextColumn
                        Width="0.15*"
                        Binding="{Binding HOTEL_EMAIL}"
                        ElementStyle="{StaticResource WrapText}"
                        Header="Email" />
                    <DataGridTextColumn
                        Width="0.15*"
                        Binding="{Binding HOTEL_TYPE}"
                        ElementStyle="{StaticResource WrapText}"
                        Header="Status" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </ContentControl>
</UserControl>
